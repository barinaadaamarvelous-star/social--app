// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Post {
  id        String  @id @default(uuid())
  authorId  String
  content   String
  imageUrl  String? @map("image_url")
  likeCount Int     @default(0) @map("like_count")
  createdAt DateTime @default(now()) @map("created_at")
}
